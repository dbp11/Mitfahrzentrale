= form_for @trip do |f|
  -if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :car
    = f.text_field :car
  .field
    = f.label :starts_at
    = f.text_field :starts_at
  .field
    = f.label :ends_at
    = f.text_field :ends_at
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :trunk
    = f.number_field :trunk
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
