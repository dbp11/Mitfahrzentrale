-#
  = form_for @trip do |f|
  -if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :car
    = f.text_field :car
  .field
    = f.label :starts_at_N
    = f.text_field :starts_at_N
  .field
    = f.label :starts_at_E
    = f.text_field :starts_at_E
  .field
    = f.label :ends_at_N
    = f.text_field :ends_at_N
  .field
    = f.label :ends_at_E
    = f.text_field :ends_at_E
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :baggage
    = f.check_box :baggage
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
-# Beispiel für Datenübergabe an action new
  = form_tag("new", :method => "post") do
    = text_field_tag(:temp)
    = submit_tag "Schick den Mist ins Nirvana!"


= form_tag("new", :method => "post") do
  %table.form_table
    %tr.form_table_row
      %td.form_left Start-Ort
      -# entweder das textfield unten oder eine select-box
      %td.form_right
        = text_field_tag(:address_start, nil, :required => "required")
    %tr
      %td Ziel-Ort
      -# entweder das textfield unten oder eine select-box
      %td
        = text_field_tag(:address_end, nil, :required => "required")
    %tr
      %td Abfahrt-Datum
      %td
        %input{:name => "date_start", :required => "required", :type => "date"}/
    %tr
      %td Abfahrt-Uhrzeit
      %td
        %input{:name => "time_start", :required => "required", :type => "time"}/
    %tr
      %td Fahrzeug
      %td
        %select{:name => "car", :required => "required"}
          - @fahrzeuge.each do |f|
            %option{:value => f} f.description
    %tr
    %tr
      %td
        = submit_tag("Erstellen")





