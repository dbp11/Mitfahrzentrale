-#
  %h1 Listing trips

  %table
    %tr
      %th User
      %th Car
      %th Starts at
      %th Ends at
      %th Start time
      %th End time
      %th Trunk
      %th Comment
      %th
      %th
      %th

    - @trips.each do |trip|
      %tr
        %td= trip.user
        %td= trip.car
        %td= trip.starts_at_N
        %td= trip.starts_at_E
        %td= trip.ends_at_N
        %td= trip.ends_at_E
        %td= trip.start_time
        %td= trip.end_time
        %td= trip.trunk
        %td= trip.comment
        %td= link_to 'Show', trip
        %td= link_to 'Edit', edit_trip_path(trip)
        %td= link_to 'Destroy', trip, :confirm => 'Are you sure?', :method => :delete

  %br

  = link_to 'New Trip', new_trip_path
