= stylesheet_link_tag :cars
.cars
  %h1 Deine Fahrzeuge

  
  
  %table
    %tr
      %th Bild
      %th Modell
      %th Sitzpl&auml;tze
      %th Verbrauch
      %th Raucher
      %th Kennzeichen
      %th Beschreibung
      %th Editieren
      %th LÃ¶schen

    - @cars.each do |car|
      %tr
        - if car.carpic?
          %td= image_tag car.carpic.url(:thumb)
        - else
          %td= image_tag( '/images/Default_car_icon.png', :size => "100x100") 
        %td= link_to car.car_type, car
        %td= car.seats
        %td= car.fuel_consumption
        %td
          = car.smoker? ? "Ja" : "Nein"
        %td= car.licence
        %td= car.description
        %td= link_to image_tag( '/images/Edit_Car_icon.png', :size => "40x40"), edit_car_path(car)
        %td= link_to image_tag( '/images/Delete_Car_icon.png', :size => "40x40"), car, :confirm => 'Bist du sicher?', :method => :delete

  
  Neues Fahrzeug
  %br
  = link_to image_tag( '/images/Add_car_icon.png', :size => "50x50"), new_car_path

