= form_for @car do |f|
  -if @car.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car.errors.count, "error")} prohibited this car from being saved:"
      %ul
        - @car.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :seats
    = f.number_field :seats
  .field
    = f.label :trunk
    = f.text_field :trunk
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :licence
    = f.text_field :licence
  .field
    = f.label :fuel_consumption
    = f.text_field :fuel_consumption
  .field
    = f.label :smoker
    = f.text_field :smoker
  .actions
    = f.submit 'Save'
