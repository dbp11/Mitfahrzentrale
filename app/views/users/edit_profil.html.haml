= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  %table.data_table#form_table
    %tr#form_table_row
      %td{:class=>"label", :id=>"form_table_first"}Geburtsdatum
      %td 
        = f.date_select :birthday,
                        :start_year => 1970,
                        :end_year => 2009,
                        :order => [:day, :month, :year],
                        :use_month_numbers => true,
                        :include_blank => true        
      %td{:class=>"label", :id=>"form_table_"}sichtbar
      %td
        = f.checkbox:visible_age, :value=>"sichtbar", :id=>"form_table_fourth"
    %tr#form_table_row
      %td{:class=>"label", :id=>"form_table_first"}Geschlecht
      %td 
        = f.select_tag:sex, "Geschlecht", options_for_select(["Maennlich", "Weiblich"], @user.sex? ? "Maennlich" : "Weiblich"), :id=>"form_table_second"
    %tr#form_table_row
      %td{:class=>"label", :id=>"form_table_first"}Strasse und Hausnummer
      %td
        = f.text:address, :required=>"required" 
      %td{:class=>"label"}sichtbar
      %td
        = f.checkbox :value=>"sichtbar"
          
    %tr#form_table_row
      %td{:class=>"label", :id=>"form_table_left"}PLZ
      %td
        = f.number:zipcode, :required=>"required"
      %td{:class=>"label"}sichtbar
      %td
        = f.checkbox :value=>"sichtbar"


    %tr#form_table_row
      %td{:class=>"label"}Ort
      %td
        = f.text:city, :required=>"required"
      %td{:class=>"label"}sichtbar
      %td
        = f.checkbox :value=>"sichtbar"

    %tr#form_table_row
      %td{:class=>"label"}InstantMassengerDaten
      %td
        = f.text:instantmassenger, :required=>"required"
      %td{:class=>"label"}sichtbar
      %td
        = f.checkbox :value=>"sichtbar"

      = f.submit 'Save'









