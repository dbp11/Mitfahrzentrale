= form_for @message do |f|
  -if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :writer
    = f.text_field :writer
  .field
    = f.label :receiver
    = f.text_field :receiver
  .actions
    = f.submit 'Save'
