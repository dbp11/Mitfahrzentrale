%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :"Name*"
    %br/
    = f.text_field :name
  %p
    = f.label :"E-mail*"
    %br/
    = f.email_field :email
  %p
    = f.label :"Passwort*"
    %br/
    = f.password_field :password
  %p
    = f.label :"Passwort wiederholen*"
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :"Geburtsdatum"
    %br/
    = f.date_select :birthday,
                    :start_year => 1900,
                    :end_year => 2011,
                    :order => [:day, :month, :year],
                    :use_month_numbers => true
  %p
    = f.label :"Straße und Hausnummer*"
    %br/
    = f.text_field:address, :required=>"required"

  %p
    = f.label :"PLZ*"
    %br/
    = f.number_field:zipcode, :required=>"required",
                              :min=>"10000",
                              :max=>"99999"
  %p
    = f.label :"Stadt*"
    %br/
    = f.text_field:city, :required=>"required"

  %p
    = f.label :"Geschlecht*"
    %br/
    = f.select:sex,  options_for_select([["Maennlich","1"], ["Weiblich","0"]], @user.sex? ? "Maennlich" : "Weiblich"), :id=>"form_table_second"

  %p
    = f.label :Telefon
    %br/
    = f.phone_field :phone

  %p
    = f.label :Instantmessenger
    %br/
    = f.text_field :instantmessenger


  %p= f.submit "Anmelden"


  %p
    Mit * gekennzeichnete Felder müssen ausgefüllt werden!
-#= render :partial => "devise/shared/links"
